{
  "type": "component.bar-chart",
  "options": {
    "chart": {
      "subtitle": "notation: compact",
      "title": "Currency number style"
    },
    "plotOptions": {
      "series": {
        "pointWidth": 24
      }
    },
    "series": [
      {
        "color": "color6",
        "data": "=@ctx.datasources.mydata"
      }
    ],
    "xAxis": {
      "categories": ["1", "2", "3", "4"]
    },
    "yAxis": {
      "labels": {
        "format": {
          "currency": "USD",
          "notation": "compact",
          "numberStyle": "currency"
        }
      },
      "max": 10000,
      "min": 0,
      "tickAmount": 3
    }
  }
}
