{
  "type": "component.bar-chart",
  "options": {
    "chart": {
      "subtitle": "tickAmount: 2",
      "title": "Tick amount"
    },
    "plotOptions": {
      "series": {
        "pointWidth": 24
      }
    },
    "series": [
      {
        "color": "color6",
        "data": "=@ctx.datasources.mydata"
      }
    ],
    "xAxis": {
      "categories": ["1", "2", "3", "4"]
    },
    "yAxis": {
      "isFirstTickHidden": true,
      "max": 10000,
      "min": 0,
      "tickAmount": 2
    }
  }
}
