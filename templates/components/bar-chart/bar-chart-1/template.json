{
  "type": "component.bar-chart",
  "options": {
    "chart": {
      "height": 280,
      "isAnimated": true
    },
    "legend": {
      "isHidden": false
    },
    "plotOptions": {
      "series": {
        "pointWidth": 12
      }
    },
    "series": [
      {
        "color": "positive",
        "data": "=@ctx.datasources.revenues",
        "dataLabels": [
          {
            "isEnabled": false
          }
        ],
        "name": "Revenues"
      },
      {
        "color": "negative",
        "data": "=@ctx.datasources.expenses",
        "dataLabels": [
          {
            "isEnabled": false
          }
        ],
        "name": "Expenses"
      }
    ],
    "xAxis": {
      "categories": ["2019", "2020", "2021", "2022"],
      "tickAmount": 3
    },
    "yAxis": {
      "labels": {
        "format": {
          "compactDisplay": "short",
          "currency": "USD",
          "notation": "compact",
          "numberStyle": "currency"
        }
      },
      "max": 65000,
      "min": 10000
    }
  }
}
